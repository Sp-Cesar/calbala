<div class="relative w-full h-screen bg-gray-50 flex flex-col overflow-hidden">
    
    <!-- Main Content Area with Grid -->
    <div class="flex-1 p-4 overflow-y-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 h-full">
            
            <!-- Card 1: Gráfico Polar - Trilateración -->
            <div class="bg-white rounded-xl shadow-lg border border-gray-200 flex flex-col h-[80vh] lg:h-full relative overflow-hidden group">
                <div class="p-3 border-b border-gray-100 bg-gray-50 flex justify-between items-center z-10 shrink-0">
                    <h2 class="font-bold text-gray-700 text-sm uppercase tracking-wide">Gráfico Polar - Trilateración</h2>
                </div>
                
                <!-- Canvas Container -->
                <div class="relative flex-1 w-full min-h-0 bg-white">
                     <div id="polar-trilateration" class="w-full h-full z-0"></div>
                     
                     <!-- Floating Coords -->
                     <div id="coords-trilateration" class="absolute top-2 left-2 text-gray-600 p-1.5 bg-white/90 backdrop-blur-sm rounded-md text-[10px] font-mono border border-gray-200 shadow-sm pointer-events-none z-10">
                        r: 0.00, &theta;: 0.00°
                    </div>

                    <!-- Legend Overlay -->
                    <div id="legend-trilateration" class="absolute bottom-4 right-4 bg-white/90 backdrop-blur-sm border border-gray-200 p-2 rounded-lg shadow-sm text-[10px] z-10">

                    </div>
                </div>

                <div class="p-4 border-t border-gray-100 bg-gray-50 z-20 shrink-0">
                    <div class="grid grid-cols-2 gap-3 mb-2">
                        <div class="bg-white p-2 rounded-md border border-gray-200 text-center shadow-sm">
                            <div class="text-[10px] uppercase text-gray-400 font-bold mb-1">Amplitud (P*)</div>
                            <div id="graph-res-mag" class="text-lg font-bold text-gray-800">0.000</div>
                        </div>
                        <div class="bg-white p-2 rounded-md border border-gray-200 text-center shadow-sm">
                            <div class="text-[10px] uppercase text-gray-400 font-bold mb-1">Ángulo (P*)</div>
                            <div id="graph-res-phase" class="text-lg font-bold text-gray-800">0.0°</div>
                        </div>
                    </div>
                    <div class="text-[10px] text-gray-400 text-center">
                        Convención: ángulo crece antihorario.
                    </div>
                </div>
            </div>

            <!-- Card 2: Vectores de Corridas -->
            <div class="bg-white rounded-xl shadow-lg border border-gray-200 flex flex-col h-[80vh] lg:h-full relative overflow-hidden group">
                <div class="p-3 border-b border-gray-100 bg-gray-50 flex justify-between items-center z-10 shrink-0">
                    <h2 class="font-bold text-gray-700 text-sm uppercase tracking-wide">Vectores de Corridas</h2>
                </div>
                
                <!-- Canvas Container -->
                <div class="relative flex-1 w-full min-h-0 bg-white">
                    <div id="polar-vectors" class="w-full h-full z-0"></div>
                    
                    <!-- Floating Coords -->
                    <div id="coords-vectors" class="absolute top-2 left-2 text-gray-600 p-1.5 bg-white/90 backdrop-blur-sm rounded-md text-[10px] font-mono border border-gray-200 shadow-sm pointer-events-none z-10">
                        r: 0.00, &theta;: 0.00°
                    </div>

                    <!-- Legend Overlay -->
                    <div id="legend-vectors" class="absolute bottom-4 right-4 bg-white/90 backdrop-blur-sm border border-gray-200 p-2 rounded-lg shadow-sm text-[10px] z-10">

                    </div>
                </div>

                <!-- Results Data Footer -->
                <div class="p-4 border-t border-gray-100 bg-gray-50 z-20 shrink-0">
                    <div class="grid grid-cols-2 gap-3 mb-2">
                        <!-- Resultante -->
                        <div class="bg-white p-2 rounded-md border border-gray-200 text-center shadow-sm">
                            <div class="text-[10px] uppercase text-gray-400 font-bold mb-1">Amplitud (Resultante)</div>
                            <div id="res-vectors-mag" class="text-sm font-bold text-gray-800">0.00</div>
                        </div>
                        <div class="bg-white p-2 rounded-md border border-gray-200 text-center shadow-sm">
                            <div class="text-[10px] uppercase text-gray-400 font-bold mb-1">Ángulo (Resultante)</div>
                            <div id="res-vectors-phase" class="text-sm font-bold text-gray-800">0.0°</div>
                        </div>
                        <!-- Opuesto -->
                        <div class="bg-white p-2 rounded-md border border-gray-200 text-center shadow-sm">
                            <div class="text-[10px] uppercase text-gray-400 font-bold mb-1">Amplitud (Opuesto)</div>
                            <div id="opp-vectors-mag" class="text-sm font-bold text-gray-800">0.00</div>
                        </div>
                        <div class="bg-white p-2 rounded-md border border-gray-200 text-center shadow-sm">
                            <div class="text-[10px] uppercase text-gray-400 font-bold mb-1">Ángulo (Opuesto)</div>
                            <div id="opp-vectors-phase" class="text-sm font-bold text-gray-800">0.0°</div>
                        </div>
                    </div>
                    <div class="text-[10px] text-gray-400 text-center leading-tight">
                        Vectores rojo (Resultante) y blanco/gris (Opuesto).
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Sidebar Partial -->
    <%- include('../partials/sidebar') %>

</div>